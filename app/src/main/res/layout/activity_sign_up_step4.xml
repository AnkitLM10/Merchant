<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signInLogIn.SignUpStep4">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/signUpstep4Finish"
        android:text="Finish"
        android:textColor="#fff"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/welcomeOnboardStep2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:gravity="center"
        android:padding="10dp"
        android:text="Welcome Onboard!"
        android:textColor="#fff"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/whereAreYouLocated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeOnboardStep2"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:text="Add Some Images"
        android:textColor="#000"
        android:textSize="18dp" />


    <LinearLayout
        android:id="@+id/useMyCurrentLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/whereAreYouLocated"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="10"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/edit_text"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_gallery"
            android:hint="Select from gallery"
            android:id="@+id/signUpstep4SelectFromGallery"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:textColorHint="#000"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/useMyCurrentLocation"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="10"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/edit_text"
            android:hint="Click from camera"
            android:drawableRight="@drawable/ic_camera"
            android:id="@+id/signUpstep4ClickFromCamera"
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:textColorHint="#000"
            android:textSize="20sp" />

    </LinearLayout>


</RelativeLayout>